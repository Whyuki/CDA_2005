@model Freelancer.Models.Devis

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifier un devis</h1>

<h4>Devis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DevisId" />
            <div class="form-group">
                <label asp-for="EtatDevis" class="control-label"></label>
                <input asp-for="EtatDevis" class="form-control" />
                <span asp-validation-for="EtatDevis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Montant" class="control-label"></label>
                <input asp-for="Montant" class="form-control" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DevisDateFinale" class="control-label"></label>
                <input asp-for="DevisDateFinale" class="form-control" />
                <span asp-validation-for="DevisDateFinale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontantFinal" class="control-label"></label>
                <input asp-for="MontantFinal" class="form-control" />
                <span asp-validation-for="MontantFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MissionId" class="control-label"></label>
                <select asp-for="MissionId" class="form-control" asp-items="@ViewBag.listMissions"></select>
                <span asp-validation-for="MissionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary"><i class="fa fa-save"></i>Modifier</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des devis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Freelancer.Models.Devis

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer un devis</h1>

<h3>Êtes-vous sûr de vouloir supprimer ce devis?</h3>
<div>
    <h4>Devis</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EtatDevis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EtatDevis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Montant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Montant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DevisDateFinale)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DevisDateFinale)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontantFinal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontantFinal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MissionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MissionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mission.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mission.Titre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DevisId" />
        <button type="submit" value="Delete" class="btn btn-danger"><i class="fa fa-trash-o"></i>Supprimer</button>

    </form>
    <div>
        <a asp-action="Index">Retour à la liste des devis</a>

    </div>
</div>

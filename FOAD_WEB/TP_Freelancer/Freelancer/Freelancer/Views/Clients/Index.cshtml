@model IEnumerable<Freelancer.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestion des clients</h1>

<p>Dernier client ajouté/modifié : </p>@ViewData["lastClientCreateUpdate"]
<a asp-action="Create" class="btn-ajout"><i class="fa fa-plus"></i> Ajouter un nouveau client</a>

<h2>Clients enregistrés</h2>
<table class="tableaux">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                    <a asp-action="Details" asp-route-id="@item.ClientId"><i class="fa fa-info-circle"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientId"><i class="fa fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ClientId"><i class="fa fa-times"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>

<a href="/CategorieClients" class="gestion-cat-egories"> <p>Gérer les catégories de clients</p><img id="logo-cat-egories" src="~/img/cat-egories_freelancer.png" alt="cat-egories" /></a>




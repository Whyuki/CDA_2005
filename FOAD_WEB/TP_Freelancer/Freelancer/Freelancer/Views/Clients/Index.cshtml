@model IEnumerable<Freelancer.Models.Client>

@{
    ViewData["Title"] = "Clients - index";
}

<h1>Gestion des clients</h1>

<p>@ViewData["lastClientCreateUpdate"]</p>
<a asp-action="Create" class="btn-ajout"><i class="fa fa-plus"></i> Ajouter un nouveau client</a>
<a asp-controller="CategorieClients" asp-action="Index" class="btn-ajout">Gestion catégorie client</a>

<h2>Clients enregistrés</h2>
<table class="tableaux">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                    <a asp-action="Details" asp-route-id="@item.ClientId"><i class="fa fa-info-circle"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClientId"><i class="fa fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ClientId"><i class="fa fa-times"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>

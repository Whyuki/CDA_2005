@model Freelancer.Models.CategorieClient

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer une catégorie de client</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette catégorie de client?</h3>
<div>
    <h4>CategorieClient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategorieId" />

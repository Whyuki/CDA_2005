@model IEnumerable<Freelancer.Models.Mission>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestion des missions</h1>


    <a asp-action="Create" class="btn-ajout"><i class="fa fa-plus"></i> Ajouter une nouvelle mission</a>


<h2>Missions enregistrées</h2>

<table class="table tableaux">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Etat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Debut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fin)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ClientId)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Etat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titre)
                    <a asp-action="Details" asp-route-id="@item.MissionId"><i class="fa fa-info-circle"></i></a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Debut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MissionId"><i class="fa fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.MissionId"><i class="fa fa-times"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
